{
  "kind": "collectionType",
  "collectionName": "service_categories",
  "info": {
    "singularName": "service-category",
    "pluralName": "service-categories",
    "displayName": "Service Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "configurable": false,
      "options": {
        "separator": "-",
        "lowercase": true
      }
    },
    "description": {
      "type": "richtext"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "heroTitle": {
      "type": "string"
    },
    "heroSubtitle": {
      "type": "text"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "pageSections": {
      "type": "dynamiczone",
      "components": [
        "shared.hero-section",
        "shared.stats-section",
        "shared.image-text-section",
        "shared.pricing-section",
        "shared.gallery-section",
        "shared.cta-section",
        "shared.image-cards-section"
      ]
    },
    "service_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::service-item.service-item",
      "mappedBy": "category"
    }
  }
}
