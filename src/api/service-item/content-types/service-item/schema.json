{
  "kind": "collectionType",
  "collectionName": "service_items",
  "info": {
    "singularName": "service-item",
    "pluralName": "service-items",
    "displayName": "Service Item"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "shortDescription": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "pageType": {
      "type": "enumeration",
      "enum": [
        "full-page",
        "grid-only"
      ],
      "default": "full-page",
      "required": true
    },
    "pageSections": {
      "type": "dynamiczone",
      "components": [
        "shared.hero-section",
        "shared.stats-section",
        "shared.image-text-section",
        "shared.pricing-section",
        "shared.gallery-section",
        "shared.cta-section"
      ]
    },
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "text"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::service-category.service-category",
      "inversedBy": "service_items"
    }
  }
}