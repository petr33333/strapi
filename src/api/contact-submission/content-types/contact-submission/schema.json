{
  "kind": "collectionType",
  "collectionName": "contact_submissions",
  "info": {
    "singularName": "contact-submission",
    "pluralName": "contact-submissions",
    "displayName": "Contact Submission",
    "description": "Contact form submissions from the website"
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "phone": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "email": {
      "type": "email",
      "required": true
    },
    "message": {
      "type": "text"
    },
    "consultationType": {
      "type": "enumeration",
      "enum": ["phone", "meeting"],
      "required": true,
      "default": "phone"
    },
    "status": {
      "type": "enumeration",
      "enum": ["new", "contacted", "completed"],
      "default": "new"
    },
    "notes": {
      "type": "text"
    }
  }
}
